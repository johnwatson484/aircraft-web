{% extends '_layout.njk' %}

{% block content %}
  <h4>Tracked aircraft</h4>
  {% if aircraft.length %}
    <div class="accordion" id="accordion-tracked">
      {% for tracked in aircraft %}
        <div class="accordion-item">
          <h2 class="accordion-header" id="header-{{ tracked.icao24 }}">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{ tracked.icao24 }}" aria-expanded="true" aria-controls="collapse-{{ tracked.icao24 }}">
              {{ tracked.icao24 }}
            </button>
          </h2>
          <div id="collapse-{{ tracked.icao24 }}" class="accordion-collapse collapse show" aria-labelledby="header-{{ tracked.icao24 }}" data-bs-parent="#accordion-tracked">
            <div class="accordion-body">
              <div class="row">
                <div class="col">ICAO24</div>
                <div class="col">{{ tracked.icao24 }}</div>
                <div class="col">Call sign</div>
                <div class="col">{{ tracked.callSign }}</div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="alert alert-warning" role="alert">
        No tracked aircraft
      </div>
    {% endif %}
  {% endblock %}
